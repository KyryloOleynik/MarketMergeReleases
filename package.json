{
  "name": "MarketMerge",
  "version": "1.1.6",
  "description": "App unifies clothing marketplaces with filtering, sorting, and size selection.",
  "main": "./src/main/server/server.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@puppeteer/browsers": "^2.10.9",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "https-proxy-agent": "^7.0.6",
    "path": "^0.12.7",
    "puppeteer": "^24.19.0",
    "puppeteer-cluster": "^0.24.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-adblocker": "^2.13.6",
    "puppeteer-extra-plugin-block-resources": "^2.4.3",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "build": {
    "appId": "10892730718271879461297461",
    "productName": "MarketMerge",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "KyryloOleynik",
        "repo": "MarketMergeReleases"
      }
    ],
    "files": [
      "**/*",
      "node_modules/**/*",
      "!AI/build/**",
      "!venv/**",
      "!AI/AI_using.spec",
      "!AI/AI_using.py"
    ],
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/icons/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "extraResources": [
      {
        "from": "src/app/chrome",
        "to": "chrome"
      },
      {
        "from": "AI/dist/AI_using.exe",
        "to": "AI/dist/AI_using.exe"
      },
      {
        "from": "AI/MarketMergeAI.cbm", 
        "to": "AI/MarketMergeAI.cbm" 
      },
      {
        "from": "AI/fashion_model",
        "to": "AI/fashion_model"
      }
    ],
    "nsis": {
      "include": "installer.nsh",
      "perMachine": true,
      "allowElevation": true
    }
  }
}
